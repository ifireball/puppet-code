<!DOCTYPE html>
<html>
<head>
	<title><%= @title %> - PPrep</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="<%= hres('bootstrap/css/bootstrap.min.css') %>" rel="stylesheet">
	<link href="<%= hres('css/pprep.css') %>" rel="stylesheet">
	<% (@stylesheets || []).each do |stylesheet| %>
		<link href="<%= hres(stylesheet) %>" rel="stylesheet">
	<% end %>
	<!--[if lt IE 9]>
	<script src="<%= hres('js/html5shiv.js') %>"></script>
	<script src="<%= hres('js/respond.min.js') %>"></script>
	<![endif]-->
</head>
<body>
	<div class="page-container">
	<div class="page-header">
		<h1><%= @title %></h1>
		<% if @uplink %>
			<p class="uplink">[<a href="<%= @uplink %>"><%= @uplink_title || @uplink %></a>]</p>
		<% end %>
	</div>
	<div class="page-body">
		<%= yield %>
	</div>
	</div>
	</div>
	<script src="<%= hres('js/jquery.min.js') %>"></script>
	<script src="<%= hres('bootstrap/js/bootstrap.min.js') %>"></script>
	<script src="<%= hres('js/pprep.js') %>"></script>
	<% (@scripts || []).each do |script| %>
		<script src="<%= hres(script) %>"></script>
	<% end %>
</body>
</html>
